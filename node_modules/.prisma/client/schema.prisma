// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Question {
  id             Int      @id @default(autoincrement())
  text           String
  options        String // JSON string to store array of options
  explanation    String // JSON string to store array of explanation paragraphs
  correctAnswers String // JSON string to store array of correct answer indices
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
